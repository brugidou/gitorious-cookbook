production:
  gitorious_client_port: 80

  gitorious_host: <%= node[:gitorious][:host] %>
  #gitorious_clone_host: gitorious.test

  gitorious_client_host: <%= node[:gitorious][:host] %>

  repository_base_path: "<%= node[:gitorious][:git_path] %>/repositories"
  archive_cache_dir: "<%= node[:gitorious][:git_path] %>/tarballs"
  archive_work_dir: "<%= node[:gitorious][:git_path] %>/tarballs-work"

  cookie_secret: <%= node[:gitorious][:cookie_secret] %>

  use_ssl: true
  gitorious_user: git
  exception_notification_emails: "<%= node[:gitorious][:exception_notification_emails] %>"

  messaging_adapter: stomp
  disable_record_throttling: false
  # enable_repository_dir_sharding: true
  symlinked_mirror_repo_base : "<% node[:gitorious][:deploy_path] %>/repo-mirror"

  stomp_server_address: <%= node[:gitorious][:stomp][:host] %>
  stomp_server_port: <%= node[:gitorious][:stomp][:port] %>
  # stomp_server_login: ~
  # stomp_server_passcode: ~

  #merge_request_diff_timeout: 10

  # Exposes a public url at /admin/diagnostics/summary which, when
  # called, runs a number of health checks to verify that the
  # Gitorious installation is configured correctly and that the host
  # system seems healthy. Useful for checking that installations go
  # well and for monitoring running installs.
  # (Note: logged in gitorious admin users can also see a visual
  # overview of the system state at /admin/diagnostics/)
  # turn_on_public_diagnostic_summary_page: true

  #frontend_server: nginx

  public_mode: <%= node[:gitorious][:public_mode] %>

  #enable_private_repositories: false
  #repos_and_projects_private_by_default: false
  only_site_admins_can_create_projects: <%= node[:gitorious][:admin_project] %>
  #system_message:
  #locale: en
  hide_http_clone_urls: <%= node[:gitorious][:hide_http] %>
  #hide_git_clone_urls: false
  #always_display_ssh_url: false
  is_gitorious_dot_org: false
  sender_email_address: "Gitorious <no-reply@<%= node[:gitorious][:host] %>>"
  mangle_email_addresses: false

